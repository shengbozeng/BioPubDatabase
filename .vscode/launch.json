            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/nih/pubchem/index/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "get-compound",
                "--root", "${workspaceFolder}/nih/pubchem/index/test_index",
                "--index", "${workspaceFolder}/nih/pubchem/index/test_index",
                "--map-size", "1099511627776"
