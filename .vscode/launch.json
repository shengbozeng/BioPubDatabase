        {
            "name": "SDFIndex: build (main.py + args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/nih/pubchem/index/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
